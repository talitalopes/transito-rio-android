<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@color/background_splash_transparent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppThemeWithMenu" parent="AppBaseTheme">
        <item name="homeAsUpIndicator">@drawable/ic_menu</item>
    </style>

    <!-- Splash -->
    <style name="SplashPage" parent="@android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/background_splash</item>
        <item name="android:colorBackground">@color/background_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
